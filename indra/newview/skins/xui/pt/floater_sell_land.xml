<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="sell land" title="Vender terreno">
	<text name="info_parcel_label">
		Parcela:
	</text>
	<text name="info_parcel">
		NOME DA PARCELA
	</text>
	<text name="info_size_label">
		Tamanho:
	</text>
	<text name="info_size">
		[AREA] m2
	</text>
	<text name="info_action">
		To sell this parcel:
	</text>
	<text name="price_label">
		Preço definido:
	</text>
	<text name="price_text">
		Escolha um preço apropriado para este terreno.
	</text>
	<text name="price_ld">
		L$
	</text>
	<text name="price_per_m">
		(L$[PER_METER] por metro quadrado)
	</text>
	<text name="sell_to_label">
		VEnder o terreno para:
	</text>
	<text name="sell_to_text">
		Escolha o que vender a todos ou a um comprador em particular.
	</text>
	<combo_box name="sell_to">
		<combo_item name="--selectone--">
			-- Selecione --
		</combo_item>
		<combo_item name="Anyone">
			Qualquer um
		</combo_item>
		<combo_item name="Specificuser:">
			Usuário específico:
		</combo_item>
	</combo_box>
	<button label="Selecionar..." name="sell_to_select_agent" />
	<text name="sell_objects_label">
		Vender os ojbetos com o terreno?
	</text>
	<text name="sell_objects_text">
		Objetos transferíveis na parcela pertencentes ao proprietário do terreno mudarão de posse.
	</text>
	<radio_group name="sell_objects">
		<radio_item name="no">
			Não, manter a propriedade dos objetos
		</radio_item>
		<radio_item name="yes">
			Sim, vender objetos com o terreno
		</radio_item>
	</radio_group>
	<button label="Mostrar objetos" name="show_objects" />
	<text name="nag_message_label">
		LEMBRE-SE: Todas as vendas são definitivas.
	</text>
	<button label="Definir terreno para venda" name="sell_btn" />
	<button label="Cancelar" name="cancel_btn" />
</floater>
